<% if user_signed_in? %>
  <button class= btn btn-primary><%= link_to('New Post', new_post_path) %></button>
<% end %>

<hr>
<!-- Title -->
<div class="row">
    <div class="col-lg-12">
        <h3>Latest Posts</h3>
        <% @posts.each do |post| %>
        <div class="row text-center">
            <div class="col-md-3 col-sm-6 hero-feature">
                <div class="thumbnail">
                    <%= link_to (image_tag post.image.url(:medium)), post  %>
                    <div class="caption">
                        <h2><%= post.title %></h2>
                        <p><%= truncate(post.body, length: 160, escape: false) %></p>
                        <%= link_to 'read more', post, class: "btn btn-danger" %>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
    </div>