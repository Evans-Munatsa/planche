<div class="row centered-form">
	<div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h2 class="panel-title">Log in </h2>
			</div>
			<div class="panel-body">
				<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
				<form role="form">
					<div class="row">
						<div class="col-xs-12 col-sm-12 col-md-12">
							<div class="form-group">
								<%= f.input :email, required: false, autofocus: true, class:"form-control input-sm floatlabel"  %>
							</div>
						</div>
					</div>
					
					<div class="row">
						<div class="col-xs-12 col-sm-12 col-md-12">
							<div class="form-group">
								<%= f.input :password, required: false, class:"form-control input-sm floatlabel" %>
							</div>
						</div>
						<div class="col-xs-12 col-sm-12 col-md-12">
							<div class="form-group">
								<%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
							</div>
						</div>
					</div>
					<%= f.button :submit, "Log in", class: "btn btn-info btn-block"%>
					<%= render "devise/shared/links" %>
				</form>
				<% end %>
			</div>
		</div>
	</div>
</div>